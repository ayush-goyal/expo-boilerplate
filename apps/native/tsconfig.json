{
  "extends": ["@acme/tsconfig/base.json"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./app/*"],
      "assets/*": ["./assets/*"]
    },
    "jsx": "react-native",
    "checkJs": false,
    "moduleSuffixes": [".ios", ".android", ".native", ""]
  },
  "include": ["app", "*.ts", "*.tsx", "*.js", "nativewind-env.d.ts"],
  "exclude": ["node_modules"]
}
